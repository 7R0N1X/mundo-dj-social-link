---
import "@fontsource-variable/dm-sans";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="7R0N1X" />
		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-screen relative">
		<div class="relative overflow-hidden w-full h-screen">
			<video autoplay muted loop class="video-background absolute top-0 left-0 w-full h-full object-cover">
				<source src="../src/assets/bg.webm" type="video/webm" />
			</video>
			<slot />
		</div>
	</body>

	<style is:global>
		body {
			font-family: "DM Sans Variable", sans-serif;
		}
	</style>
</html>
