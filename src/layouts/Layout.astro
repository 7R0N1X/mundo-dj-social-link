---
import "@fontsource-variable/dm-sans";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="7R0N1X" />
		<meta name="description" content="Mundo DJ | Creando packs musicales para Dj's" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-screen h-screen relative bg-neutral-900 lg:bg-gradient-to-b from-[#000000] to-[#0A0A0A]">
			<slot />
	</body>

	<style is:global>
		body {
			font-family: "DM Sans Variable", sans-serif;
		}
	</style>
</html>

